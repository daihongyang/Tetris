{
  "compilerOptions": {
    "target": "ES2016", //控制编译后支持的js版本 默认是ES3
    "module": "ESNext",//使用的模块化标准
    "lib": ["ES2016","dom"],//可以使用的语言环境
    "sourceMap":true,
    "strict":true,
    "esModuleInterop": false,
    "strictNullChecks":true,//更好的检查空类型
    "removeComments": true//编译结果里面移除掉注释
  },
  "include": ["./src"], //要编译的文件目录 默认是该文件夹下的所有文件
  // "files": ["./src/index.ts"] //只编译特定的文件
}